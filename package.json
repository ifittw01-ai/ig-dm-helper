{
  "name": "ig-dm-helper",
  "version": "1.0.0",
  "description": "Instagram 私訊助手 & 抓粉工具 - Electron 桌面版",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-rebuild -f -w sqlite3",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "test-api": "node test-api.js"
  },
  "keywords": [
    "instagram",
    "automation",
    "dm",
    "followers",
    "marketing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "axios": "^1.13.1",
    "crypto-js": "^4.2.0",
    "node-machine-id": "^1.1.12",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.igdmhelper.app",
    "productName": "IG DM Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!dist",
      "!node_modules"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
